<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    >

    <LinearLayout
        android:id="@+id/box"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vta"
        android:layout_marginBottom="580sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:layout_marginTop="25sp"
            android:fontFamily="sans-serif-thin"
            />
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/box"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="-620sp"
        android:layout_marginRight="30sp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/btninfo"
            android:layout_width="wrap_content"
            android:layout_height="130sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginRight="15sp"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/info"
            android:fontFamily="sans-serif-light"
            android:text="Info" />

        <Button
            android:id="@+id/btncourse"
            android:layout_width="wrap_content"
            android:layout_height="130sp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/course"
            android:fontFamily="sans-serif-light"
            android:text="courses" />

        <Button
            android:id="@+id/btnict"
            android:layout_width="wrap_content"
            android:layout_height="130sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginRight="15sp"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/home"
            android:fontFamily="sans-serif-light"
            android:text="Centers" />

        <Button
            android:id="@+id/btnmap"
            android:layout_width="wrap_content"
            android:layout_height="130sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/hyperlink"
            android:fontFamily="sans-serif-light"
            android:text="Social Media" />


    </GridLayout>

    <Button
        android:id="@+id/feedb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="-330sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/shadow"
        android:backgroundTint="@color/vta"
        android:drawableTop="@drawable/feedback"
        android:fontFamily="sans-serif-light"
        android:text="Feedback"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedb"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/shadow"
        android:backgroundTint="#FFFFFF"
        android:drawableTop="@drawable/exit"
        android:text="exit" />

    <RelativeLayout
        android:id="@+id/foot"
        android:layout_below="@+id/btnexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Copyright &#169; 2023,NDICT,All Rights Reserved."
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>




</RelativeLayout>